<%= render "shared/second-header"%>


<div class='form-wrap'>
  <div class='form-header'>
    <h3 class='form-header-text'>
      ユーザー情報編集
    </h3>
  </div>

  <%= form_with model: @user, url: user_path(@user.id), class: 'edit-main', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-contents">
    <div class="form-group1"> 
      <div class="form-group file">
        <h4>プロフィール画像</h4>
        <%= f.file_field :image, placeholder: "画像アップロード" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ひとこと</label>
          <span class="indispensable">(任意)</span>
        </div>
        <%= f.text_area :text, class:"text-input-default", id:"text", placeholder:"40字以内", maxlength:"40" %>
      </div>
    </div>
    <div class="form-group2">
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ユーザー名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) rebon太郎", maxlength:"40" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="accordion-box">
        <label for="label1", class="change-btn", id="label1">パスワードを変更する</label>
        <div class="accordion-show", id="pulldown-show">
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">新しいパスワード</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
            <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">新しいパスワード(確認)</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>
        </div>
      </div>
  <div class='edit-btn'>
    <%= f.submit "保存する", class:"edit-indigo-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>