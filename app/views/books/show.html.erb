<%= render "shared/header" %>
  
<div class="book-content-wrapper">
  <div class="main-books-wrapper">
    <div class="left-side-container">
      <div class="left-side-contents">
        <div class="book-image">
          <%= image_tag(rails_blob_path(@book.image), class: "book-img") %>
        </div>
        <div class="left-bar-title">
          <%= @book.title %>
        </div>
        <div class="book-author">
          <%= "著者 : #{@book.author}" %>
        </div>
        <% if user_signed_in? %>
        <div class="left-bar-list">
          <ul class="left-content-lists">
            <li class="left-content"><%= link_to "ブックリスト", "#", class:"content-btn" %></li>
            <li class="left-content"><%= link_to "お気に入り", "#", class:"content-btn" %></li>
          <ul>
        </div>
        <% end %>
        <% unless user_signed_in? && current_user.id  == @book.user.id %>
        <div class="post-user-account">
          <%= link_to "#{@book.user.name}", user_path(@book.user.id), class:"user-account" %>
          <span>さんの投稿</span>
        </div>
        <% end %>
      </div>
    </div>

    <div class="posts-index">
      <% if user_signed_in? && current_user.id  == @book.user.id %>
        <div class="create-content">
          <%= link_to 'アウトプット', new_book_post_path(@book.id), class:"add-btn-post" %>
        </div>
      <% end %>
      <div class="post-contents-wrapper">
        <div class="post-contents">
          <% if @book.posts %>
            <ul class="posts">
              <% @book.posts.each do |post| %>
                <li class="post">
                  <div class="upper-content">
                    <div class="highlight-content">
                      <%= link_to "#{post.highlight}", "/books/#{post.book.id}/posts/#{post.id}", class:"highlight-btn" %>
                    </div>
                  </div>
                  <div class="lower-content">
                    <div class="post-date">
                      <%= l post.created_at %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>