<div class="main-books-wrapper">
  <div class="left-side-bar">
    <div class="left-bar-contents">
      <div class="left-bar-top">
        <% if user_signed_in? %>
        <%= link_to "ユーザー名", "#", class:"user-name" %>
        <% end %>
      </div>
      <div class="left-bar-list">
        <ul class="left-content-lists">
          <li class="left-content"><%= link_to "ブックリスト", "#", class:"content-btn" %></li>
          <li class="left-content"><%= link_to "お気に入り", "#", class:"content-btn" %></li>
          <li class="left-content"><%= link_to "見つける", "#", class:"content-btn" %></li>
        <ul>
      </div>
    </div>
    <div class='purchase-btn'>
      <span class='purchase-btn-text'>追加する</span>
      <a href="#">
      <%= image_tag 'book_btn.png' , size: '200x50' ,class: "purchase-btn-icon" %>
      </a>
