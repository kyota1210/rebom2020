<%= render "shared/header" %>

<div class="post-wrapper">
  <div class="post-form">
    <%= form_with model: @post, url: book_posts_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="highlight-box">
        <%= f.text_area :highlight, placeholder: "ハイライト", id:"post_highlight", class:"highlight" %>
      </div>
      <div class="text-box">
        <%= f.text_area :text, placeholder: "200字以内", id:"post_text", class:"text-area" %>
      </div>
      <div class='save-btn'>
        <%= f.submit "保存する", class:"save" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>