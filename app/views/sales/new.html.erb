<%= render "shared/second-header"%>

<div class="items-sell-contents">
  <div class="sale-container">
    <h2 class="items-sell-title">本の情報</h2>
  <div class="items-sell-main">
    <div class="content-book">
      <div class="book-img-content">
        <%= image_tag @book.image, class: "book-img" %>
      </div>
      <div class="book-info">
        <h3 class="book-title">
          <%= @book.title %>
        </h3>
        <div class="book-author">
        <%= "著者：#{@book.author}" %>
        </div>  
      </div>
    </div>

    <div class="sales-info">
      <%= form_with model: @book_sale, url: sales_path(book_id: @book.id), local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>

        <div class="form">
          <div class="weight-bold-text">
          本の状態
          <span class="indispensable">必須</span>
          </div>
            <%= f.collection_select(:status, Status.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
          <div class="items-detail">
            <div class="weight-bold-text">
            配送料の負担
            <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:transfer_fee, TransferFee.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        </div>
      </div>
    </div>
    <%# 販売価格 %>
      <div class="sell-price">
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
        <div class="price-content">
          <span>販売手数料 (10%)</span>
          <span>
            <span id='add-tax-price'></span>円
          </span>
        </div>
        <div class="price-content">
          <span>販売利益</span>
          <span>
            <span id='profit'></span>円
        </div>
        </span>
      </div>
    </div>
    <%# /販売価格 %>
    </div>
    <%# <div class="check-box"> %>
      <%# <%= f.label :sell, "出品してもよろしいですか？" %>
      <%# <%= f.check_box :sell ,{}, "true", "false" %>
    <%# </div> %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する", class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-button" %>
    </div>
    <% end %>
    <%# /下部ボタン %>
  </div>
  </div>
</div>

<%= render "shared/footer"%>